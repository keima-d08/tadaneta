<div class= "main">
 <div class= "follow_wrapper">

  <% @users.each do |user| %>
  
  <div class= follow_list>
     <div class=follow_img>
      <% if user.image.attached? %>
       <%= image_tag user.image, class: :follow_circle%>
      <% else %>
      <%= image_tag "icon.png",class: :follow_circle %>
        <% end %>
     </div>
     <div class= follow_name>
     <%= link_to user.nickname,user_path(user.id), class: "follow_name" %>
     </div>
     <div class= "user_follow">
     <% if user_signed_in? && current_user != user %>
         <div>
            <% if current_user.following?(user) %>
             <%= link_to 'フォロー中', user_relationships_path(user.id),class: :followed_btn, method: :delete %>
             <% else %>
             <%= link_to 'フォロー', user_relationships_path(user.id),class: :followed_btn, method: :POST %>
            <% end %>
          </div>
        <% end %>
        </div>
    </div>
  </div>
  <% end %>
 </div>
</div>