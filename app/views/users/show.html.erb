<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.nickname%>
      </h2>
      <% if user_signed_in? && current_user.id == @user.id %>
      <div>
        <%= link_to "編集する",  edit_user_registration_path(@user.id), class: :prototype__btn %>
      </div>
      <% end %>
      
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= @user.nickname %>さんのプロトタイプ
      </h2>

      <%#フォロー%>
    <% if user_signed_in? && current_user != @user %>
      <div>
      <% if current_user.following?(@user) %>
       <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete %>
       <% else %>
       <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST %>
       <% end %>
      </div>
    <% end %>

      <div>
      <%= link_to follows_user_path(@user) do %>
     <h6>フォロー<%= @following_users.count %></h6>
     <% end %>
     <%= link_to followers_user_path(@user) do %>
     <h6>フォロワー<%= @follower_users.count %></h6>
     <% end %>
     </div>
      <%#フォロー%>


      <div class="user__card">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <%= render partial: "posts/post", collection: @posts %>
      </div>
    </div>
  </div>
</div>