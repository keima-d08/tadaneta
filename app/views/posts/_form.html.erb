<%= form_with(model: @post, local: true) do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"post_title" %>
  </div>

  <div class="field">
   <%= f.label :product, "作品名" %><br />
   <%= f.text_field :product, id:"post_product" %>
  </div>

<div>
 <p>ジャンル</p>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}) %>
</div>

<div>
 <p>タイプ</p>
 <%= f.collection_select(:type_id, Type.all, :id, :name, {}) %>
</div>

<div>
 <p>ネタバレ</p>
 <%= f.collection_select(:spoil_id, Spoil.all, :id, :name, {}) %>
</div>

  <div class="field">
    <%= f.label :content, "本文" %><br />
    <%= f.text_area :content, class: :form__text, id:"post_content" %>
  </div>


  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>